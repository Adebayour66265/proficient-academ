<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= post._id %>/delete" method="POST">
    <button class="btn">Delete Post <i class="uil uil-trash-alt"></i></button>
    </form>
    <img src="<%= post.image %>" alt="<%= post.image %>" id="image-size">
    <a href="/posts/<%= post._id %>/edit">Edit Post <i class="uil uil-pen"></i></a>

    <a href="/posts/<%= post._id %>"> View Post <i class="uil uil-book-reader"></i></a>
  </div>
</article>